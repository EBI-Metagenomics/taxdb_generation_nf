// set temp 'work' dir to nobackup
workDir = "/hps/nobackup/rdf/metagenomics/service-team/nextflow-workdir/taxdb_generation_nf/$USER"

executor {
    name              = "slurm"
    queueSize         = 200
    queueGlobalStatus = true
    submitRateLimit   = "10 sec"
    pollInterval      = "10 sec"
}

singularity {
    enabled     = true
    autoMounts  = true
    cacheDir    = "/hps/nobackup/rdf/metagenomics/service-team/singularity-cache/"
    pullTimeout = "60 min"
}
